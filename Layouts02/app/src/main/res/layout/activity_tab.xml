    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="405dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.023"
    tools:layou_editor_absoluteX="16dp"
